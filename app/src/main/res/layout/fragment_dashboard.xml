<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F50057"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DASHBOARD"
            android:textColor="@color/navy"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginBottom="16dp"/>

        <!-- First row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:padding="19dp">

            <!-- CardView 1: Pregnancy Week -->
            <androidx.cardview.widget.CardView
                android:id="@+id/pregnancy_week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/pregnancy_weektext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pregnancy Week"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <!-- CardView 2: Baby Size -->
            <androidx.cardview.widget.CardView
                android:id="@+id/appointment_cardview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/appointment_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Appointment"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:padding="19dp">

            <!-- CardView 3: Pregnancy Tips -->
            <androidx.cardview.widget.CardView
                android:id="@+id/weight_cardview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/weight_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Weight Tracker"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <!-- CardView 4: Symptom -->
            <androidx.cardview.widget.CardView
                android:id="@+id/symptom_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/symptom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Symptom"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Third row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:padding="16dp"
            >

            <!-- CardView 5: Kick Counter -->
            <androidx.cardview.widget.CardView
                android:id="@+id/kickcounter_cardview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/kickcounter_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/kick_counter"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <!-- CardView 6: Contraction Timer -->
            <androidx.cardview.widget.CardView
                android:id="@+id/contractiontimer_cardview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/contractiontimer_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Contraction Timer"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Fourth row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <!-- CardView 7: Nutrition and Fitness -->
            <androidx.cardview.widget.CardView
                android:id="@+id/nutritionfitness_cardview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/nutritionfitness_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nutrition and Fitness"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <!-- CardView 8: Add more CardViews as needed -->

        </LinearLayout>

    </LinearLayout>
</ScrollView>
